<html>

<head>
  <title>Local Login</title>
  <link rel='stylesheet' href='/asset/bootstrap4.min.css' />
  <link rel='stylesheet' href='/asset/styles.css' />
</head>

<body>
  <div class='container'>
    <div class='col-md-6 offset-md-3'>
      <h1>Local Login</h1>
      <a href="/" class='btn btn-success'> Home </a>
      <a href='/auth/signup' class='btn btn-secondary'> Local signup</a>
      <a href='/auth/facebook' class='btn btn-primary'> Facebook</a>
      <a href='/auth/google' class='btn btn-danger'> GooglePlus </a>
      <hr />
      <form action='/auth/login' method='post'>
        <div class='form-group'>
          <label> Email</label>
          <input type='text' class='form-control' name='email' />
        </div>
        <div class='form-group'>
          <label> Password</label>
          <input type='text' class='form-control' name='password' />
        </div>
        <div class='form-group'>
          <button type='submit' class='btn btn-warning'> Login</button>
        </div>
      </form>
      <hr />
      <p>
        Dont have an account? <a href='/auth/signup'>Signup</a>
      </p>
    </div>
  </div>
</body>

</html>
